<% if current_user %>
  Logged in as <%= current_user.email %>.
  <%= link_to "Log Out", logout_path %>
  <div class="jumbotron input-box bg-color">
  <h1 class="display-4">Welcome To The BlogApp</h1>
  <p class="lead">Showcase your knowledge through your <strong>Blog</strong></p>
  <hr class="my-4">
  <%= link_to 'My Blog', articles_path, :class => "btn btn-primary" %>
</div>
<% else %>
<div class="input-box bg-color">
  <%= link_to "Sign Up", signup_path, :class => "btn btn-primary" %> or 
  <%= link_to "Log In", login_path, :class => "btn btn-primary" %>
</div>
<% end %>




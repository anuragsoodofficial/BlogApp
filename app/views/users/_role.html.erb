 <% if (current_user.role == "admin") %>
	<%= form_with(model: user, local: true) do |form| %>
	  <% if user.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

	      <ul>
	        <% user.errors.full_messages.each do |message| %>
	          <li><%= message %></li>
	        <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="field form-group">
	    <%= form.text_field :first_name, :class => "form-control", placeholder: "First Name" %>
	  </div>

	  <div class="field form-group">
	    <%= form.text_field :last_name, :class => "form-control", placeholder: "Last Name" %>
	  </div>

	  <div class="field form-group">
	    <%= form.text_field :email, :class => "form-control", placeholder: "Email Address", :readonly => "readonly" %>
	  </div>
	  <% if @user.role == "user" %>
	  <div class="field form-group">
	    <%= form.select :role, options_for_select([[User.roles, 'admin'], [User.roles, 'user']]), {}, {class: "form-control"} %>
	  </div>
	  <% end %>  


	  <%= form.submit :Submit, :class => "btn btn-primary btn-block" %>

	<% end %>

<% else %>
<%= render "sessions/login" %>
<% end %>
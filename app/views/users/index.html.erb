<h6 id="notice"><%= notice %></h6>
<% if (current_user.role == "admin") %>
  <%= render "sessions/destroy" %>
  <div class="container border border-light">
    <h1>User's List</h1>
    <% @users.each_with_index do |user_element, index| %>
      <div>
        <hr class="my-4">
        <div class="row ">
          <div class="col-md-2">
            <p><%= index+1 %></p>
          </div>
          <div class="col-md-2">
            <% full_name = user_element.first_name + " " + user_element.last_name %>
            <p><%= full_name %></p>
          </div>
          <div class="col-md-3">
            <p><%= user_element.email %></p>
          </div>
          <div class="col-md-2">
            <p><%= user_element.role %></p>
          </div>
          <div class="col-md-3">
            <span class="btn-mg"><%= link_to 'Edit', edit_user_path(user_element), :class => "btn btn-outline-primary" %></span>
            <% if user_element.role == "user" %>
              <span class="btn-mg"><%= link_to 'Destroy', user_path(user_element),
						method: :delete,
						data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-danger" %></span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="input-box">
      <%= link_to 'Back', root_url, :class => "btn btn-block btn-outline-dark" %>
    </div>
  </div>
<% else %>
  <%= render "sessions/login" %>
<% end %>
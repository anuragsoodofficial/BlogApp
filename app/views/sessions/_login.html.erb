<div class="login-box">
  <p id="alert"><%= alert %></p>
  <h1>Login</h1>
  <%= form_tag sessions_path do |form| %>
    <div class="field form-group">
      <%= text_field_tag(:email, nil, class: "form-control", placeholder: "Email Address") %>
    </div>
    <div class="field form-group">
      <%= password_field_tag(:password, nil, class: "form-control", placeholder: "Password") %>
    </div>
    <div class="actions">
      <%= submit_tag "Login", :class => "btn btn-primary btn-block" %>
      <%= link_to "Sign Up", new_user_url, :class => "btn btn-outline-dark btn-block" %>
    </div>
  <% end %>
</div>
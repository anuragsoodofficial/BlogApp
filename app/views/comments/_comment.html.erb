<div class="container comments">
	<div class="row">
		<div class="col">
			<hr class="my-4">
  			<h5><%= comment.commenter %></h5>
		</div>
	</div>
	<div class="row">
		<div class="col">
  		<%= comment.body %>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<%= link_to 'Delete', [comment.article, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-danger btn-sm" %>
    </div>
		
	</div>
</div>
<% if current_user %>
  <%= render "sessions/destroy" %>
  <div class="mt-5">
    <h6 id="notice"><%= notice %></h6>
    <%= link_to 'Create article', new_article_path, :class => "btn btn-outline-primary btn-lg" %>
  </div>
  <div class="container border border-light bg-color">
    <h1 class="mb-5">Blogs</h1>
    <% @article.each_with_index do |article_element, index| %>
      <div>
        <div class="row ">
          <div class="col-md-2">
            <p><%= index+1 %></p>
          </div>
          <div class="col-md-2">
            <p><%= article_element.title %></p>
          </div>
          <div class="col-md-4">
            <p><%= article_element.text.truncate(100) %></p>
          </div>
          <div class="col-md-4">
            <%= link_to ('<i class="btn-mg fas fa-eye"></i>').html_safe, article_path(article_element) %>
            <%= link_to ('<i class=" btn-mg fas fa-user-edit"></i>').html_safe, edit_article_path(article_element) %>
            <%= link_to ('<i class="btn-mg far fa-trash-alt"></i>').html_safe, article_path(article_element),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
        <hr class="my-4 mx-4">
      </div>
    <% end %>
  </div>
<% else %>
  <%= render "sessions/login" %>
<% end %>
<h1>Listing Articles</h1>

<%= link_to 'New article', new_article_path %>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @article.each do |article_element| %>
    <tr>
      <td><%= article_element.title %></td>
      <td><%= article_element.text %></td>
      <td><%= link_to 'Show', article_path(article_element) %></td>
      <td><%= link_to 'Edit', edit_article_path(article_element) %></td>
      <td><%= link_to 'Destroy', article_path(article_element),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>